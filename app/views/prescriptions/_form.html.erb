
<%= form_for prescription do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>

    <%= f.label :description %> <br>
    <%= f.text_area :description %> <br>

    <%= f.label :frequency %><br>
    <%= f.number_field :frequency %><br>

    <%= f.label :dose %><br>
    <%= f.number_field :dose %><br>

    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %><br>
    <%= f.submit %>
<% end %>