<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if false %>
    <h1> nurse_patient_path(@nurse, @patient) </h1>
  <% end %>
  <body>
  
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href=<%= patient_path @patient %> >Meds</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href= <%= new_patient_vital_path @patient%> >Vital</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=<%= new_patient_body_mass_path @patient%>>Weight</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=<%= edit_patient_path @patient%>>New Med</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=<%= patients_path %>>Residents</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=<%= sessions_logout_path%>>Logout</a>
        </li>
        
    </ul>
    <%= yield %>
  </body>
</html>